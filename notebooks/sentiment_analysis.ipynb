import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

from textblob import TextBlob
from wordcloud import WordCloud

import sys
sys.path.append("../scripts")

from preprocess_text import clean_text


df = pd.read_csv("../data/tweets.csv")

df.head()



df["clean_tweet"] = df["tweet"].apply(clean_text)

df.head()


def get_sentiment(text):
    analysis = TextBlob(text)
    polarity = analysis.sentiment.polarity

    if polarity > 0:
        return "positive"
    elif polarity < 0:
        return "negative"
    else:
        return "neutral"

df["sentiment"] = df["clean_tweet"].apply(get_sentiment)

df.head()


plt.figure(figsize=(6,4))
sns.countplot(x="sentiment", data=df)
plt.title("Distribusi Sentimen Tweet")
plt.xlabel("Sentiment")
plt.ylabel("Jumlah Tweet")
plt.show()


sentiment_percentage = df["sentiment"].value_counts(normalize=True) * 100
sentiment_percentage


all_words = " ".join(df["clean_tweet"])

wordcloud = WordCloud(
    width=800,
    height=400,
    background_color="white"
).generate(all_words)

plt.figure(figsize=(10,5))
plt.imshow(wordcloud, interpolation="bilinear")
plt.axis("off")
plt.title("WordCloud Tweet")
plt.show()


df["sentiment"].value_counts()

